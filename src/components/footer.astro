---
import { Instagram, Linkedin } from 'lucide-astro';
import ThemeToggle from './ThemeToggle.astro';
import { cdn } from '../config.ts';
---

<footer>
  <div class="container">
    <div class="footer-content">
      <!-- Sección 1: Logo -->
      <div class="footer-section logo-section">
        <img src=`${cdn}/menu-dark.png` alt="ACIMU Logo" class="footer-logo" />
      </div>

      <!-- Sección 2: Sitemap -->
      <div class="footer-section">
        <nav class="sitemap">
          <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/about">Acerca de</a></li>
            <li><a href="/portfolio">Portafolio</a></li>
            <li><a href="/quoter">Cotizador</a></li>
            <li><a href="/contact">Contacto</a></li>
          </ul>
        </nav>
      </div>

      <!-- Sección 3: Contacto -->
      <div class="footer-section contact-section">
        <p class="address">Calle Montúfar, Sangolquí, Rumiñahui</p>
        <p class="phone">Tel: 096 212 2527</p>
        <p class="email">arquitectos.cinco.mas.uno@gmail.com</p>
      </div>

      <div class="footer-section">
        <div class="social">
          <a href="https://www.linkedin.com/company/arquitectos-cinco-uno" aria-label="Linkedin" target="_blank"><Linkedin size={24} /></a>
          <a href="https://www.instagram.com/_acimu_" aria-label="Instagram" target="_blank"><Instagram size={24} /></a>
          <ThemeToggle />
        </div>
      </div>
    </div>

    <!-- Footer Bottom: Copyright -->
    <div class="footer-bottom">
      <p class="copy">
        &copy; {new Date().getFullYear()} ACIMU. Todos los derechos reservados.
      </p>
      <p class="copy">Desarrollado por ACIMU</p>
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: var(--color-muted);
    padding: var(--spacing-xl) 0 1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .footer-content {
    margin-bottom: var(--spacing-lg);
  }

  .footer-section {
    display: flex;
    justify-content: center;
  }

  /* Sección 1: Logo */
  .logo-section {
    padding: var(--spacing-lg);
  }

  .footer-logo {
    width: 100%;
    max-width: 350px;
    height: auto;
  }

  .sitemap {
    margin-bottom: var(--spacing-lg);
  }

  .sitemap ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: var(--spacing-md);
  }

  .sitemap li a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .sitemap li a:hover {
    color: var(--color-primary);
  }

  /* Sección 3: Contacto */
  .contact-section {
    flex-direction: column;
    align-items: center;
  }
  .contact-section p {
    margin: var(--spacing-xs) 0;
    color: var(--color-text);
    font-size: 0.95rem;
  }

  .social {
    display: flex;
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }

  .social a {
    color: var(--color-text);
    transition:
      color 0.3s ease,
      transform 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social a:hover {
    color: var(--color-primary);
    transform: scale(1.1);
  }

  .credits {
    color: var(--color-text);
    font-size: 0.85rem;
    opacity: 0.7;
    margin: 0;
    text-align: right;
  }

  /* Footer Bottom */
  .footer-bottom {
    border-top: 1px solid rgba(128, 128, 128, 0.2);
    padding-top: var(--spacing-md);
    text-align: center;
  }

  .copy {
    color: var(--color-primary);
    font-size: 0.9rem;
    margin: 0;
  }

  @media (max-width: 480px) {
    footer {
      padding: var(--spacing-lg) 0 1;
    }

    .container {
      padding: 0 var(--spacing-sm);
    }

    .sitemap li a,
    .contact-section p {
      font-size: 0.65rem;
    }

    .copy {
      font-size: 0.85rem;
    }
  }
</style>
