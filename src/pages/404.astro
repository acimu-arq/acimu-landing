---
import NoHeader from "../layouts/NoHeader.astro";
---

<NoHeader
  title="404 - Página no encontrada | Acimu"
  description="La página que buscas no existe o ha sido movida."
>
  <div class="error-404">
    <div class="container-404">
      <!-- SVG Creativo de Arquitectura -->
      <div class="svg-container">
        <svg
          viewBox="0 0 400 400"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          aria-label="Edificio en construcción incompleto"
        >
          <!-- Suelo/Base -->
          <line
            x1="50"
            y1="350"
            x2="350"
            y2="350"
            stroke="var(--color-muted)"
            stroke-width="3"
            opacity="0.4"
          />
          
          <!-- Edificio Principal (3 torres asimétricas) -->
          
          <!-- Torre Izquierda (Completa) -->
          <g class="tower-left">
            <rect
              x="80"
              y="200"
              width="60"
              height="150"
              fill="var(--color-primary)"
              opacity="0.2"
            />
            <!-- Ventanas Torre Izquierda -->
            <rect x="90" y="215" width="15" height="20" fill="var(--color-accent)" opacity="0.6"/>
            <rect x="115" y="215" width="15" height="20" fill="var(--color-accent)" opacity="0.6"/>
            <rect x="90" y="250" width="15" height="20" fill="var(--color-accent)" opacity="0.6"/>
            <rect x="115" y="250" width="15" height="20" fill="var(--color-accent)" opacity="0.6"/>
            <rect x="90" y="285" width="15" height="20" fill="var(--color-accent)" opacity="0.6"/>
            <rect x="115" y="285" width="15" height="20" fill="var(--color-accent)" opacity="0.6"/>
            <rect x="90" y="320" width="15" height="20" fill="var(--color-accent)" opacity="0.6"/>
            <rect x="115" y="320" width="15" height="20" fill="var(--color-accent)" opacity="0.6"/>
            <!-- Contorno -->
            <rect
              x="80"
              y="200"
              width="60"
              height="150"
              fill="none"
              stroke="var(--color-primary)"
              stroke-width="2.5"
            />
          </g>
          
          <!-- Torre Central (Incompleta - con líneas punteadas) -->
          <g class="tower-center">
            <!-- Parte construida -->
            <rect
              x="170"
              y="260"
              width="60"
              height="90"
              fill="var(--color-primary)"
              opacity="0.15"
            />
            <rect
              x="170"
              y="260"
              width="60"
              height="90"
              fill="none"
              stroke="var(--color-primary)"
              stroke-width="2.5"
            />
            <!-- Ventanas -->
            <rect x="180" y="275" width="15" height="20" fill="var(--color-accent)" opacity="0.4"/>
            <rect x="205" y="275" width="15" height="20" fill="var(--color-accent)" opacity="0.4"/>
            <rect x="180" y="310" width="15" height="20" fill="var(--color-accent)" opacity="0.4"/>
            <rect x="205" y="310" width="15" height="20" fill="var(--color-accent)" opacity="0.4"/>
            
            <!-- Parte no construida (fantasma) -->
            <rect
              x="170"
              y="150"
              width="60"
              height="110"
              fill="none"
              stroke="var(--color-muted)"
              stroke-width="2"
              stroke-dasharray="8,6"
              opacity="0.4"
              class="ghost-building"
            />
            <!-- Ventanas fantasma -->
            <rect x="180" y="165" width="15" height="20" fill="none" stroke="var(--color-muted)" stroke-dasharray="4,3" opacity="0.3"/>
            <rect x="205" y="165" width="15" height="20" fill="none" stroke="var(--color-muted)" stroke-dasharray="4,3" opacity="0.3"/>
            <rect x="180" y="200" width="15" height="20" fill="none" stroke="var(--color-muted)" stroke-dasharray="4,3" opacity="0.3"/>
            <rect x="205" y="200" width="15" height="20" fill="none" stroke="var(--color-muted)" stroke-dasharray="4,3" opacity="0.3"/>
          </g>
          
          <!-- Torre Derecha (Media construcción) -->
          <g class="tower-right">
            <rect
              x="260"
              y="220"
              width="60"
              height="130"
              fill="var(--color-primary)"
              opacity="0.18"
            />
            <rect
              x="260"
              y="220"
              width="60"
              height="130"
              fill="none"
              stroke="var(--color-primary)"
              stroke-width="2.5"
            />
            <!-- Ventanas Torre Derecha -->
            <rect x="270" y="235" width="15" height="20" fill="var(--color-accent)" opacity="0.5"/>
            <rect x="295" y="235" width="15" height="20" fill="var(--color-accent)" opacity="0.5"/>
            <rect x="270" y="270" width="15" height="20" fill="var(--color-accent)" opacity="0.5"/>
            <rect x="295" y="270" width="15" height="20" fill="var(--color-accent)" opacity="0.5"/>
            <rect x="270" y="305" width="15" height="20" fill="var(--color-accent)" opacity="0.5"/>
            <rect x="295" y="305" width="15" height="20" fill="var(--color-accent)" opacity="0.5"/>
          </g>
          
          <!-- Grúa de Construcción -->
          <g class="crane">
            <!-- Base de la grúa -->
            <rect
              x="245"
              y="320"
              width="10"
              height="30"
              fill="var(--color-accent)"
            />
            <!-- Torre vertical -->
            <rect
              x="247"
              y="140"
              width="6"
              height="180"
              fill="var(--color-accent)"
            />
            <!-- Brazo horizontal -->
            <line
              x1="160"
              y1="145"
              x2="340"
              y2="145"
              stroke="var(--color-accent)"
              stroke-width="4"
            />
            <!-- Cable -->
            <line
              x1="200"
              y1="145"
              x2="200"
              y2="190"
              stroke="var(--color-accent)"
              stroke-width="1.5"
              stroke-dasharray="3,3"
              class="crane-cable"
            />
            <!-- Gancho/Carga -->
            <rect
              x="195"
              y="190"
              width="10"
              height="15"
              fill="var(--color-accent)"
              class="crane-hook"
            />
          </g>
          
          <!-- Señal de precaución (cono) -->
          <g class="cone">
            <polygon
              points="100,350 110,330 90,330"
              fill="var(--color-accent)"
              opacity="0.7"
            />
            <rect
              x="98"
              y="348"
              width="4"
              height="2"
              fill="var(--color-muted)"
            />
          </g>
          
          <!-- Número 404 grande en el cielo -->
          <g class="number-404">
            <text
              x="200"
              y="90"
              font-size="72"
              font-weight="bold"
              fill="var(--color-accent)"
              text-anchor="middle"
              font-family="var(--font-complex)"
              opacity="0.15"
            >404</text>
          </g>
          
          <!-- Partículas/Polvo de construcción -->
          <circle cx="150" cy="180" r="2" fill="var(--color-muted)" opacity="0.3" class="particle p1"/>
          <circle cx="280" cy="200" r="2" fill="var(--color-muted)" opacity="0.3" class="particle p2"/>
          <circle cx="190" cy="250" r="1.5" fill="var(--color-muted)" opacity="0.3" class="particle p3"/>
          <circle cx="240" cy="160" r="2" fill="var(--color-muted)" opacity="0.3" class="particle p4"/>
          <circle cx="310" cy="190" r="1.5" fill="var(--color-muted)" opacity="0.3" class="particle p5"/>
        </svg>
      </div>

      <!-- Contenido de texto -->
      <div class="content-404">
        <h2 class="error-title">Página no encontrada</h2>
        <p class="error-description">
          Esta página aún está en construcción o no existe.
        </p>
        <div class="actions">
          <a href="/" class="btn btn-primary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </div>
</NoHeader>

<style>
  .error-404 {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-md);
    background-color: var(--color-background);
  }

  .container-404 {
    max-width: 600px;
    width: 100%;
    text-align: center;
  }

  /* SVG Container - Mobile First */
  .svg-container {
    width: 100%;
    max-width: 400px;
    margin: 0 auto var(--spacing-lg);
    animation: fadeInUp 0.8s ease-out;
  }

  .svg-container svg {
    width: 100%;
    height: auto;
    filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1));
  }

  /* Animaciones del SVG */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animación de torres construyéndose */
  .tower-left {
    animation: buildUp 1.2s ease-out;
  }

  .tower-center {
    animation: buildUp 1.4s ease-out 0.2s both;
  }

  .tower-right {
    animation: buildUp 1.3s ease-out 0.4s both;
  }

  @keyframes buildUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Edificio fantasma pulsando */
  .ghost-building {
    animation: ghostPulse 3s ease-in-out infinite;
  }

  @keyframes ghostPulse {
    0%, 100% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.2;
    }
  }

  /* Grúa balanceándose */
  .crane {
    transform-origin: 250px 320px;
    animation: craneSwing 4s ease-in-out infinite;
  }

  @keyframes craneSwing {
    0%, 100% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(1deg);
    }
  }

  /* Cable de grúa balanceándose */
  .crane-cable {
    animation: cableSwing 2s ease-in-out infinite;
    transform-origin: 200px 145px;
  }

  @keyframes cableSwing {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(3px);
    }
  }

  /* Gancho moviéndose */
  .crane-hook {
    animation: hookMove 2s ease-in-out infinite;
  }

  @keyframes hookMove {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(3px);
    }
  }

  /* Partículas flotando */
  .particle {
    animation: float 3s ease-in-out infinite;
  }

  .p1 {
    animation-delay: 0s;
  }

  .p2 {
    animation-delay: 0.5s;
  }

  .p3 {
    animation-delay: 1s;
  }

  .p4 {
    animation-delay: 1.5s;
  }

  .p5 {
    animation-delay: 2s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) translateX(0);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-10px) translateX(5px);
      opacity: 0.6;
    }
  }

  /* Contenido de texto - Mobile First */
  .content-404 {
    animation: fadeIn 1s ease-out 0.3s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .error-code {
    font-family: var(--font-complex);
    font-size: 4rem;
    color: var(--color-accent);
    margin: 0 0 var(--spacing-md);
    line-height: 1;
    letter-spacing: 0.05em;
  }

  .error-title {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    color: var(--color-primary);
    margin: 0 0 var(--spacing-md);
    font-weight: 700;
  }

  .error-description {
    font-family: var(--century-gothic);
    font-size: 1rem;
    color: var(--color-text-light);
    margin: 0 0 var(--spacing-lg);
    line-height: 1.6;
    padding: 0 var(--spacing-md);
  }

  /* Botones - Mobile First */
  .actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    align-items: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: var(--border-radius);
    font-family: var(--century-gothic);
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    width: 100%;
    max-width: 280px;
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: var(--color-background-alt);
    border: 2px solid var(--color-primary);
  }

  .btn-primary:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(77, 66, 41, 0.3);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }

  .btn-secondary:hover {
    background-color: var(--color-primary);
    color: var(--color-background-alt);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(77, 66, 41, 0.2);
  }

  .btn svg {
    width: 20px;
    height: 20px;
  }

  /* Tablet - 768px and up */
  @media (min-width: 768px) {
    .error-404 {
      padding: var(--spacing-lg);
    }

    .container-404 {
      max-width: 700px;
    }

    .svg-container {
      max-width: 450px;
      margin-bottom: var(--spacing-xl);
    }

    .error-code {
      font-size: 5.5rem;
      margin-bottom: var(--spacing-lg);
    }

    .error-title {
      font-size: 2.25rem;
      margin-bottom: var(--spacing-lg);
    }

    .error-description {
      font-size: 1.125rem;
      padding: 0 var(--spacing-lg);
    }

    .actions {
      flex-direction: row;
      justify-content: center;
      gap: var(--spacing-lg);
    }

    .btn {
      width: auto;
      min-width: 180px;
    }
  }

  /* Desktop - 1024px and up */
  @media (min-width: 1024px) {
    .error-404 {
      min-height: 85vh;
    }

    .container-404 {
      max-width: 800px;
    }

    .svg-container {
      max-width: 500px;
    }

    .error-code {
      font-size: 6rem;
    }

    .error-title {
      font-size: 2.5rem;
    }

    .error-description {
      font-size: 1.25rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .btn {
      font-size: 1.0625rem;
      padding: calc(var(--spacing-md) + 2px) var(--spacing-xl);
    }
  }

  /* Dark mode adjustments */
  [data-theme='dark'] .svg-container svg {
    filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.3));
  }

  [data-theme='dark'] .btn-primary {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
  }

  [data-theme='dark'] .btn-primary:hover {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
  }

  [data-theme='dark'] .btn-secondary {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  [data-theme='dark'] .btn-secondary:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-background);
  }
</style>
