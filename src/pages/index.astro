---
export const prerender = true;
import Layout from '@/layouts/Layout.astro';
import { cdn } from '@/config';
import Services from '@/components/Services.astro';
import TextCarousel from '@/components/TextCarousel.astro';

const slides = [
  {
    title: '',
    subtitle: '',
    imageUrl: `${cdn}/equipo.webp`,
  },
];

const servicesText = [
  'ARQUITECTURA',
  'DISEÑO',
  'INTERIORISMO',
  'LEGALIZACION',
  'REMODELACION',
  'CONSULTORIA',
  'SUSTENTABILIDAD',
  'MODELADO 3D',
  'INGENIERIAS',
];
---

<Layout title="ACIMU" description="Espacios que conectan y perduran">
  <!-- Intro Animation -->
  <div id="intro-overlay">
    <img src={`${cdn}/menu-dark.png`} alt="ACIMU Logo" id="intro-logo" />
  </div>

  <!-- Hero Section with Slideshow -->
  <section class="hero">
    <div class="slideshow-container">
      <div class="slideshow">
        {
          slides.map((slide) => (
            <div
              class="slide"
              style={`background-image: url('${slide.imageUrl}');`}
            >
              <div class="overlay" />
              <div class="content">
                <h1>{slide.title}</h1>
                <p>{slide.subtitle}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- <button class="prev"><ChevronLeft size={48} /></button> -->
    <!-- <button class="next"><ChevronRight size={48} /></button> -->

    <!-- <div class="dots"> -->
    <!-- {slides.map((_, index) => ( -->
    <!-- <button class="dot" data-index={index}></button> -->
    <!-- ))} -->
    <!-- </div> -->
  </section>

  <!-- Philosophy Section -->
  <section class="philosophy-section">
    <div class="philosophy-container">
      <div class="philosophy-header">
        <span class="philosophy-label">FILOSOFIA</span>
        <h2 class="philosophy-title">
          Espacios<br />
          <em>que conectan</em><br />
          y perduran
        </h2>
      </div>
      <div class="philosophy-content">
        <p class="philosophy-text">
          Cada espacio que creamos es una conversacion entre la luz, la materia y la
          vida. Creemos que la arquitectura no solo cobija, sino que transforma la
          manera en que habitamos el mundo.
        </p>
        <a href="#services-section" class="philosophy-cta">EXPLORAR SERVICIOS →</a>
      </div>
    </div>
  </section>

  <!-- Services Carousel -->
  <TextCarousel items={servicesText} />

  <!-- Services Section -->
  <Services />

  <!-- FAQ Invitation -->
  <section class="faq-invite">
    <div class="faq-invite-content">
      <p class="faq-question">¿Necesitas más información?<p>
      <a href="/contact#faq" class="faq-cta">Preguntas frecuentes →</a>
    </div>
  </section>
</Layout>

<style>
  /* Hero Slideshow */
  .hero {
    height: 100vh;
    position: relative;
    overflow: hidden;
  }
  .slideshow-container {
    height: 100%;
    width: 100%;
    overflow: hidden;
  }
  .slideshow {
    height: 100%;
    display: flex;
    justify-content: center;
    transition: transform 0.5s ease-in-out;
  }
  .slide {
    min-width: 80%;
    height: 100%;
    background-size: cover;
    background-position: top;
    background-repeat: no-repeat;
    position: relative;
    display: flex;
    align-items: top;
    justify-content: center;
    text-align: center;
    color: white;
  }
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
  }
  .slide .content {
    position: relative;
    z-index: 2;
  }
  .slide h1 {
    font-size: 4rem;
    margin-bottom: var(--spacing-md);
  }
  .slide p {
    font-size: 1.5rem;
  }

  /* Slideshow Controls */
  .prev,
  .next {
    cursor: pointer;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(0, 0, 0, 0.3);
    color: white;
    border: none;
    padding: var(--spacing-sm);
    border-radius: 50%;
    z-index: 10;
    transition: background-color 0.3s ease;
  }
  .prev:hover,
  .next:hover {
    background-color: rgba(0, 0, 0, 0.6);
  }
  .prev {
    left: var(--spacing-lg);
  }
  .next {
    right: var(--spacing-lg);
  }

  /* Dots */
  .dots {
    position: absolute;
    bottom: var(--spacing-lg);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: var(--spacing-sm);
    z-index: 10;
  }
  .dot {
    cursor: pointer;
    height: 12px;
    width: 12px;
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    display: inline-block;
    transition: background-color 0.3s ease;
    border: none;
    padding: 0;
  }
  .dot.active,
  .dot:hover {
    background-color: white;
  }

  /* Sections */
  .testimonials {
    padding: var(--spacing-xl) 0;
  }
  h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--spacing-lg);
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Philosophy Section */
  .philosophy-section {
    background-color: var(--color-background-alt, #f5f5f5);
    padding: var(--spacing-xl) var(--spacing-md);
    opacity: 0;
    transform: translateY(50px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .philosophy-section.fade-in-up {
    opacity: 1;
    transform: translateY(0);
  }

  .philosophy-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    padding: var(--spacing-lg) 0;
  }

  .philosophy-header {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .philosophy-label {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    color: var(--color-text-light, #666);
    font-weight: 500;
  }

  .philosophy-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    text-align: left;
  }

  .philosophy-title em {
    font-style: italic;
    font-weight: 400;
  }

  .philosophy-content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    justify-content: center;
  }

  .philosophy-text {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-text-light, #666);
    margin: 0;
  }

  .philosophy-cta {
    display: inline-block;
    text-decoration: none;
    color: var(--color-text, #000);
    font-weight: 600;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    padding-bottom: 0.25rem;
    border-bottom: 2px solid currentColor;
    width: fit-content;
    transition: opacity 0.5s ease;
    scroll-behavior: smooth;
  }

  .philosophy-cta:hover {
    opacity: 0.7;
  }

  /* Testimonials */
  .testimonial {
    max-width: 800px;
    margin: 0 auto var(--spacing-lg);
    text-align: center;
  }
  .testimonial blockquote {
    font-size: 1.5rem;
    font-family: var(--font-serif);
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-md);
    margin: 0 0 var(--spacing-sm) 0;
    font-style: italic;
  }
  .testimonial cite {
    font-style: normal;
    font-weight: bold;
  }

  /* Responsive adjustments */
  @media (min-width: 769px) and (max-width: 1024px) {
    /* Tablet */
    .philosophy-container {
      gap: var(--spacing-lg);
      padding: var(--spacing-xl) var(--spacing-lg);
    }

    .philosophy-title {
      font-size: 3rem;
    }

    .philosophy-text {
      font-size: 1.1rem;
    }
  }

  @media (min-width: 1025px) {
    /* Desktop */
    .philosophy-container {
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-xl);
      align-items: center;
      padding: var(--spacing-xl) var(--spacing-lg);
    }

    .philosophy-title {
      font-size: 3.5rem;
    }

    .philosophy-text {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 768px) {
    .slide h1 {
      font-size: 2.5rem;
    }
    .slide p {
      font-size: 1.2rem;
    }
    .prev,
    .next {
      padding: var(--spacing-xs);
    }
    .prev {
      left: var(--spacing-md);
    }
    .next {
      right: var(--spacing-md);
    }
    .dots {
      bottom: var(--spacing-md);
    }
    .featured-projects,
    .services,
    .stats,
    .testimonials {
      padding: var(--spacing-lg) 0;
    }
    h2 {
      font-size: 2rem;
    }
    .testimonial blockquote {
      font-size: 1.2rem;
    }

    .philosophy-title {
      font-size: 2rem;
    }

    .philosophy-text {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .slide h1 {
      font-size: 2rem;
    }
    .slide p {
      font-size: 1rem;
    }
    .prev,
    .next {
      display: none;
    }
    h2 {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 1024px) {
    .slide {
      min-width: 100%;
    }
  }

  /* FAQ Invite */
  .faq-invite {
    padding: var(--spacing-xl) var(--spacing-md);
    background-color: var(--color-background-alt);
    text-align: center;
  }
  
  .faq-invite-content {
    max-width: 600px;
    margin: 0 auto;
    padding: var(--spacing-lg) 0;
  }
  
  .faq-question {
    font-size: 1rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-lg);
    font-weight: 400;
  }
  
  .faq-cta {
    display: inline-block;
    text-decoration: none;
    color: var(--color-text);
    font-weight: 600;
    font-size: 0.875rem;
    letter-spacing: 0.15em;
    padding: var(--spacing-md) var(--spacing-xl);
    border: 2px solid var(--color-text);
    border-radius: 0;
    transition: all 0.3s ease;
  }
  
  .faq-cta:hover {
    background-color: var(--color-text);
    color: var(--color-background);
  }
  
  .btn-primary {
    display: inline-block;
    background-color: var(--color-primary);
    color: white;
    padding: var(--spacing-sm) var(--spacing-xl);
    border-radius: 999px;
    text-decoration: none;
    font-weight: 600;
    transition: opacity 0.3s ease;
  }
  .btn-primary:hover {
    opacity: 0.9;
  }
</style>

<style>
  /* Intro Animation Styles */
  #intro-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: black;
    z-index: 10000;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: overlaySlideUp 0.8s cubic-bezier(0.77, 0, 0.175, 1) forwards;
    animation-delay: 2.2s;
  }

  #intro-logo {
    width: 480px;
    height: auto;
    opacity: 0;
    animation: logoSequence 2.2s ease-in-out forwards;
  }

  @media (max-width: 768px) {
    #intro-logo {
      width: 300px; /* Tamaño "mediano" */
    }
  }

  @keyframes logoSequence {
    0% {
      opacity: 0;
      transform: translateX(-100%) scale(1);
    }
    20% {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
    70% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    100% {
      opacity: 0;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes overlaySlideUp {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-100%);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slideshow = document.querySelector('.slideshow') as HTMLElement;
    const slides = document.querySelectorAll('.slide');
    const prevButton = document.querySelector('.prev');
    const nextButton = document.querySelector('.next');
    const dotsContainer = document.querySelector('.dots');
    const dots = document.querySelectorAll('.dot');

    let currentIndex = 0;
    const totalSlides = slides.length;
    let slideInterval: ReturnType<typeof setInterval>;

    function goToSlide(index: number) {
      if (index < 0) {
        index = totalSlides - 1;
      } else if (index >= totalSlides) {
        index = 0;
      }

      if (slideshow) {
        slideshow.style.transform = `translateX(-${index * 100}%)`;
      }

      dots.forEach((dot) => dot.classList.remove('active'));
      if (dots[index]) {
        dots[index].classList.add('active');
      }

      currentIndex = index;
    }

    function startSlideShow() {
      slideInterval = setInterval(() => {
        goToSlide(currentIndex + 1);
      }, 10000);
    }

    function resetSlideShow() {
      clearInterval(slideInterval);
      startSlideShow();
    }

    if (prevButton) {
      prevButton.addEventListener('click', () => {
        goToSlide(currentIndex - 1);
        resetSlideShow();
      });
    }

    if (nextButton) {
      nextButton.addEventListener('click', () => {
        goToSlide(currentIndex + 1);
        resetSlideShow();
      });
    }

    if (dotsContainer) {
      dotsContainer.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        if (target && target.classList.contains('dot')) {
          const index = parseInt(target.dataset.index, 10);
          goToSlide(index);
          resetSlideShow();
        }
      });
    }

    // Initialize the first slide and start the automatic slideshow
    if (totalSlides > 0) {
      goToSlide(0);
      startSlideShow();
    }

    // Intersection Observer for fade-in-up animation
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('fade-in-up');
        }
      });
    }, observerOptions);

    const philosophySection = document.querySelector('.philosophy-section');
    if (philosophySection) {
      observer.observe(philosophySection);
    }
  });
</script>
