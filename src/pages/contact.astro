    </section>

    <section class="contact-content">
      <div class="info-container">
        <h2>Contactanos</h2>
        <div class="info-item">
          <Mail size={24} />
          <a href="mailto:arquitectos.cinco.mas.uno@gmail.com"
            >arquitectos.cinco.mas.uno@gmail.com</a
          >
        </div>
        <div class="info-item">
          <Phone size={24} />
          <a href="tel:+593962122527">096 212 2527</a>
        </div>

        <div class="contact-actions">
          <a
            class="action-btn whatsapp"
            href="https://wa.me/593962122527?text=Hola%20ACIMU%2C%20quiero%20informaci%C3%B3n%20sobre%20sus%20servicios"
            target="_blank"
            rel="noopener"
            aria-label="Chatear por WhatsApp"
          >
