</Layout>

<style>
  .container {
    margin-top: 5rem;
  }

  .contact-intro {
    text-align: center;
    padding: var(--spacing-xl) 0;
  }
  h1 {
    font-size: 3.5rem;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
  }

  @media (max-width: 992px) {
    .contact-content {
      grid-template-columns: 1fr;
    }
  }

  /* Actions */
  .contact-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }
  .action-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: 999px;
    text-decoration: none;
    font-weight: 600;
    border: 1px solid var(--color-muted);
  }
  .action-btn.whatsapp { background-color: #25D36620; border-color: #25D36650; }
  .action-btn.call { background-color: var(--color-background); }
  .action-btn.email { background-color: var(--color-background); }

  /* Info */
  .info-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }
  .info-item svg {
    color: var(--color-primary);
  }
  /* Stores */
  .stores {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }
  @media (max-width: 992px) {
    .stores { grid-template-columns: 1fr; }
  }
  .store-card {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    background-color: var(--color-background);
    gap: var(--spacing-xl);
    border-radius: var(--border-radius);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border: 1px solid var(--color-muted);
  }
  .store-header { padding: var(--spacing-lg); }
  .store-header h3 { margin-bottom: var(--spacing-xs); }
  .store-map iframe {
    width: 100%;
    height: 360px;
    border: 0;
  }
  .store-actions {
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-md) var(--spacing-lg);
    border-top: 1px solid var(--color-muted);
  }
  .store-actions a {
    text-decoration: none;
    font-weight: 600;
    color: var(--color-primary);
  }

  /* Floating WhatsApp */
  .whatsapp-float {
    position: fixed;
    right: 24px;
    bottom: 24px;
    width: 56px;
    height: 56px;
    display: grid;
    place-items: center;
    background-color: #25D366;
    color: white;
    border-radius: 50%;
    box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    z-index: 50;
    text-decoration: none;
  }
  .whatsapp-float:hover { filter: brightness(1.05); }
</style>
